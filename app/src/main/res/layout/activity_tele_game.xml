<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TeleGame">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="347dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:paddingTop="15dp">

        <ImageView
            android:id="@+id/antenaColgante"
            android:layout_width="288dp"
            android:layout_height="456dp"
            android:layout_marginBottom="30dp"
            app:srcCompat="@drawable/antenna" />

        <ImageView
            android:id="@+id/head"
            android:layout_width="172dp"
            android:layout_height="138dp"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="-7dp"
            android:paddingStart="108dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/head1_sinfondo" />

        <ImageView
            android:id="@+id/body"
            android:layout_width="138dp"
            android:layout_height="257dp"
            android:layout_marginLeft="152dp"
            android:paddingStart="120dp"
            android:paddingTop="20dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/torso_sinfondo" />

        <ImageView
            android:id="@+id/brazoDere"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:layout_marginLeft="174dp"
            android:layout_marginTop="16dp"
            android:paddingStart="100dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/brazodere_piernaizq_sinfondo" />

        <ImageView
            android:id="@+id/brazoIzq"
            android:layout_width="177dp"
            android:layout_height="127dp"
            android:layout_marginLeft="107dp"
            android:paddingStart="100dp"
            android:paddingTop="40dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/brazoizq_piernadere_sinfondo" />


        <ImageView
            android:id="@+id/piernaIzq"
            android:layout_width="170dp"
            android:layout_height="152dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="95dp"
            android:paddingTop="90dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/brazodere_piernaizq_sinfondo" />

        <ImageView
            android:id="@+id/piernaDere"
            android:layout_width="170dp"
            android:layout_height="152dp"
            android:layout_marginLeft="231dp"
            android:layout_marginTop="95dp"
            android:layout_marginBottom="30dp"
            android:paddingTop="90dp"
            android:visibility="invisible"
            app:srcCompat="@drawable/brazoizq_piernadere_sinfondo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/botonesLetras"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" />

    <GridView
        android:id="@+id/letters"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginBottom="-10dp"
        android:background="@color/black"
        android:horizontalSpacing="5dp"
        android:numColumns="7"
        android:padding="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp" />

    <Button
        android:id="@+id/newGame"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/black_buttom"
        android:onClick="onClickNewGame"
        android:text="Nuevo Juego"
        android:textColor="@color/white"
        android:textSize="18sp" />




</LinearLayout>